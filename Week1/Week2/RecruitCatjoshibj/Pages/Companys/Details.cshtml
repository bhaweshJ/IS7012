@if (Model.Company.CandidateIds.Any())
{
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Company.CandidateIds[0].TargetSalary)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.CandidateIds)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TargetSalary)
                        </td>

                        <td>
                            <a asp-page="/Candidates/Details" asp-route-id="@item.Id">Details</a>
                        </td>

                       
                        </tr>
                }
                </tbody>
                                </table>
                                                </div>}
                else
                {
                <div class="alert alert-warning"> No candidates exist for this company</div>
                }

                <div>
